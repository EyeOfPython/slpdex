{
  "extends": [
      "stylelint-config-recommended-scss"
  ],
  "rules": {
      "max-line-length": 100,
      "number-leading-zero": "never",
      "string-quotes": "single",
      "order/order": ["at-rules", "custom-properties", "declarations"],
      "order/properties-alphabetical-order": true
  },
  "plugins": ["stylelint-order"],
  "ignoreFiles": "**/*.html"
}
